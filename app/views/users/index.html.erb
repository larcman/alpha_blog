<h1 align="center">All Alpha Bloggers</h1>

<div align="center">
	<% @users.each do |user| %>
	    <!-- < render 'users/user', obj: @article.user well: true > -->
		<ul class="listing">
			<div class="row center">
				<div class="well col-md-4 col-md-offset-4">
					<li>Createdby: </li>
					<li><%= link_to gravatar_for(user), user_path(user) %></li>
					<li classs="article-title"><%= link_to user.username, user_path(user) %></li>
					<li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
	        	</div>
	        </div>
	    </ul>
	<% end %>
</div>
