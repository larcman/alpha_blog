<%= render 'shared/errors', obj: @user %>

<div class="row">
	<div class="col-xs-12">
		<%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |el| %>
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= el.label :username %> <br/>
                </div>
                <div class="col-sm-8">
					<%= el.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
                </div>
            </div>

			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= el.label :email %>
                </div>
                <div class="col-sm-8">
					<%= el.email_field :email, class: "form-control", placeholder: "Enter email" %>
			    </div>
			</div>

            <div class="form-group">
				<div class="control-label col-sm-2">
					<%= el.label :password %>
                </div>
                <div class="col-sm-8">
					<%= el.password_field :password, class: "form-control", placeholder: "Enter pasword" %>
			    </div>
			</div>

    		<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
	    			<%= el.submit(@user.new_record? ? "Signup" : "Update your account", class: "btn btn-primary btn-lg") %>
	    		</div>
    		</div>
		<% end %>
		
		<div class="col-xs-4 col-xs-offset-4">
			[ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
		</div>

	</div>
</div>
